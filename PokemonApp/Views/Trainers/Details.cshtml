@model PokemonApp.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10"></dd>
        @foreach (var c in Model.Catches)
        {
            <dt class="col-sm-2"></dt>
            <dd class = "col-sm-10">@Html.DisplayFor(modelItem => c.Name) the @Html.DisplayFor(modelItem => c.Pokemon.Species)</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |

    <a asp-controller="Catch" asp-action="Create" asp-route-id="@Model.Id">Catch a New Pokemon</a> 
</div>
